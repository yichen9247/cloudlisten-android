<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xuexiang.xui.widget.statelayout.StatefulLayout
        android:id="@+id/netlayout"
        android:gravity="center"
        android:paddingTop="560px"
        android:paddingBottom="280px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/dialog_content_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/network"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color11"
            android:layout_marginTop="20dp"
            android:text="@string/error_notinternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </com.xuexiang.xui.widget.statelayout.StatefulLayout>

</androidx.constraintlayout.widget.ConstraintLayout>